<div class="user-style mdl-layout mdl-js-layout">
  <main class="mdl-layout__content">
    <div class="user-style__signup mdl-grid">
    	<div class="mdl-cell mdl-cell--2-col"></div>
    	<div class="mdl-cell mdl-cell--8-col user-signup__form mdl-shadow--4dp mdl-card">
    		<h3>注册账号</h3>
    		<%= form_for(@user) do |f| %>
					<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
				    <%= f.label :name, class: "mdl-textfield__label" %>
				    <%= f.text_field :name,class: "mdl-textfield__input" %>
				  </div>
				  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
				    <%= f.label :email, class: "mdl-textfield__label" %>
				    <%= f.text_field :email, class: "mdl-textfield__input" %>
				  </div>
				  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
				    <%= f.label :password, class: "mdl-textfield__label" %>
				    <%= f.password_field :password, class: "mdl-textfield__input" %>
				  </div>
				  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
				    <%= f.label :password_confirmation, "Confirmation", class: "mdl-textfield__label"%>
				    <%= f.password_field :password_confirmation, class: "mdl-textfield__input" %>
				  </div>
					<div class="mdl-grid submit-grid-style">
			    	<%= f.submit "注册", class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" %>
			    </div>
			  <% end %>
    	</div>
    </div>
  </main>
</div>