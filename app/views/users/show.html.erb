<% provide(:title, @user.name) %>
<div class="manager-style mdl-layout mdl-js-layout">
  <main class="mdl-layout__content">
  	<div class="manager-style__main mdl-grid">
  		<div class="mdl-cell mdl-cell--2-col mdl-card manager-sidebar">
  			<nav class="sidebar mdl-navigation mdl-card__supporting-text mdl-color-text--grey-700">
  				<span class="mdl-navigation__link"><%= link_to "主页", root_path %></span>
          <span class="mdl-navigation__link"><%= link_to "个人", current_user %></span>
          <span class="mdl-navigation__link"><%= link_to "文章", post_user_path(@user) %></span>
          <span class="mdl-navigation__link"><%= link_to "评论", '#' %></span>
          <span class="mdl-navigation__link"><%= link_to "退出", signout_path, method: 'delete' %></span>
  			</ul>
  		</div>
  		<div class="mdl-cell mdl-cell--10-col mdl-card manager-content">
        <div class="mdl-card__supporting-text mdl-color-text--grey-700">
          <%= form_for(@user) do |f| %>
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
              <%= f.label :name, class: "mdl-textfield__label"%>
              <%= f.text_field :name, class: "mdl-textfield__input" %>
            </div>
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
              <%= f.label :email, class: "mdl-textfield__label" %>
              <%= f.text_field :email, class: "mdl-textfield__input" %>
            </div>
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
              <%= f.label :password, class: "mdl-textfield__label" %>
              <%= f.password_field :password, class: "mdl-textfield__input" %>
            </div>
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
              <%= f.label :password_confirmation, "Confirm Password", class: "mdl-textfield__label" %>
              <%= f.password_field :password_confirmation, class: "mdl-textfield__input" %>
            </div>
            <div class="mdl-grid submit-grid-style">
              <%= f.submit "保存设置", class: "mdl-button mdl-js-button mdl-button--raised" %>
            </div>
          <% end %>
        </div>
  		</div>
  	</div>
  </main>
</div>