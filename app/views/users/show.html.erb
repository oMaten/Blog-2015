<% provide(:title, @user.name) %>
<div class="manager-style mdl-layout mdl-js-layout">
  <main class="mdl-layout__content">
  	<div class="manager-style__main mdl-grid">
  		<div class="mdl-cell mdl-cell--2-col manager-sidebar">
  			<nav class="sidebar mdl-navigation ">
  				<%= link_to "主 页", root_path %>
          <%= link_to "个 人", current_user %>
          <%= link_to "文 章", post_user_path(@user) %>
  				<a href="#" class="mdl-navigation__link">短讯</a>
  				<%= link_to "退出", signout_path, method: 'delete' %>
  			</ul>
  		</div>
  		<div class="mdl-cell mdl-cell--10-col manager-content">
        <%= form_for(@user) do |f| %>
          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <%= f.label :name, class: "mdl-textfield__label"%>
            <%= f.text_field :name, class: "mdl-textfield__input" %>
          </div>
          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <%= f.label :email, class: "mdl-textfield__label" %>
            <%= f.text_field :email, class: "mdl-textfield__input" %>
          </div>
          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <%= f.label :password, class: "mdl-textfield__label" %>
            <%= f.password_field :password, class: "mdl-textfield__input" %>
          </div>
          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <%= f.label :password_confirmation, "Confirm Password", class: "mdl-textfield__label" %>
            <%= f.password_field :password_confirmation, class: "mdl-textfield__input" %>
          </div>
          <div class="mdl-grid submit-grid-style">
            <%= f.submit "Save changes", class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" %>
          </div>
        <% end %>
  		</div>
  	</div>
  </main>
</div>