<div class="blog-style mdl-layout mdl-js-layout">
  <main class="mdl-layout__content">
    <div class="blog-style__posts mdl-grid">
      <div class="mdl-card mdl-cell mdl-cell--8-col blog-user__img">
        <div class="mdl-card__title mdl-card--expand"></div>
        <div class="mdl-card__supporting-text blog-banner__title">
        </div>
      </div>
      <div class="mdl-card mdl-cell mdl-cell--4-col">
        <div class="mdl-card__media mdl-card--expand">
        </div>
        <div class="mdl-card__supporting-text blog-message__title">
          <button id="demo-menu-top-left" class="mdl-button mdl-js-button mdl-button--icon">
            <i class="material-icons">more_vert</i>
          </button>
          <ul class="mdl-menu mdl-menu--top-left mdl-js-menu mdl-js-ripple-effect" for="demo-menu-top-left">
            <% if signed_in? %>
              <li class="mdl-menu__item"><%= link_to current_user.name, current_user %></li>
              <li class="mdl-menu__item"><%= link_to "退出", signout_path, method: "delete" %></li>
            <% else %>
              <li class="mdl-menu__item"><%= link_to "注册账号", signup_path %></li>
              <li class="mdl-menu__item"><%= link_to "登陆账号", signin_path %></li>
              <li class="mdl-menu__item"><%= link_to "设置", '#' %></li>
              <li class="mdl-menu__item"><%= link_to "信息", '#' %></li>
            <% end %>
          </ul>
        </div>
      </div>
      <% @posts.each do |post| %>
        <div class="mdl-card mdl-cell mdl-cell--12-col">
          <div class="mdl-card__media blog-style-bg-1">
            <h3>
              <%= link_to post.title, post %>
            </h3>
          </div>
          <div class="mdl-card__supporting-text"></div>
        </div>
      <% end %>
      <%= render 'layouts/footer' %>
    </div>
  </main>
  <div class="mdl-layout__obfuscator"></div>
</div>